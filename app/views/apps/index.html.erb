<section id="banner" data-video="images/banner">
					<div class="inner">
						<header>
							<h1>Video Games Store</h1>
							<p>A responsive video game store with a superb collection<br />
							designed by <a href="https://templated.co/">Templated</a> and released under the Creative Commons License.</p>
						</header>
						<a href="#main" class="more">Learn More</a>
					</div>
				</section>

			<!-- Main -->
				<div id="main">
					<div class="inner">

					<!-- Boxes -->
						<div class="thumbnails">
                        
                        <% @products.each do |product| %>
                          
                            <div class="box">
                            <%=  link_to image_tag(product.images.first.src, border: 0), {action: 'show', controller: 'apps', id: product.id}, {class: 'image fit'} %>
								
								<div class="inner">
									<h3><%= product.title %></h3>
                                    <p><%= strip_tags(product.body_html) %></p>
                                    <%=  link_to "Details", {action: 'show', controller: 'apps', id: product.id}, class: "button fit" %>
									
								</div>
                            </div>
                            <% end %>

						</div>

					</div>
				</div>

