<div class="main">
  <center><h1 style="font-size:1.50em;">Confirmed Orders</h1></center>

  <%= link_to 'Back', {controller: "apps", action: "index"},{:class => :previous  } %>
  
  <div class="success">
    <br><p style="color:black; font-family:cursive;"><strong>NOTE: </strong> These orders and their details are coming from Shopify. Once the order and payment is confirmed, the orders details will automatically appear in our custom app.  </p>
  </div>

  <% i=0 %>
  <table class="table table-dark table-striped">
    <thead style="background-color: rosybrown;" >
      <tr>
        <th scope="col">#</th>
        <th scope="col">Order Id</th>
        <th scope="col">Order Number </th>
        <th scope="col">Customer ID </th>
        <th scope="col">Customer Name </th>
        <th scope="col">Customer Email</th>
        <th colspan="2" scope="col">Actions</th>
      </tr>
    </thead>


    <% @orders.each do |order| %>
    <tr style="color:black; ">
      <th scope="row"><%= i=i+1 %></th>
      <td><%= order.oid %></td>
      <td><%= order.onum %></td>
      <td><%= order.cid %></td>
      <td><strong><%= order.cfname %> </strong></td>
      <td><strong><%= order.cemail %> </strong></td>
      <td><%= link_to 'Show', order_path(order.id) %></td>
      <td><%= link_to 'Delete', order_path(order.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </table>
</div>

